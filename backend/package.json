{
    "name": "nasa-project-backend",
    "version": "1.0.0",
    "description": "Node.js backend for NASA Project",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=integration",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "axios": "^1.4.0",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "jest": "^29.5.0",
        "supertest": "^6.3.3",
        "nodemon": "^2.0.22",
        "eslint": "^8.40.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "**/*.js",
            "!node_modules/**",
            "!coverage/**"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}